        </ComboBox>
        <ListView x:Name="CustomerList_ListView" HorizontalAlignment="Left" Height="481" Margin="10,149,0,0" VerticalAlignment="Top" Width="325">
        </ListView>
        <ComboBox HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.529,0.369">
            <ComboBoxItem Content="50" IsSelected="True"/>
            <ComboBoxItem Content="100"/>
            <ComboBoxItem Content="500"/>
        </ComboBox>
    </Grid>
</Page>
